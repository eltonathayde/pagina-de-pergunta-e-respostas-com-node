<%- include('./partials/headar.ejs') %>
<body class="vaiMudar">
   <%- include('./partials/navbar.ejs') %>
    <div class="container">
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <form method="POSt" action="/responder">
            <label for="">Resposta:</label>
            <textarea name="corpo"  placeholder="Digite sua resposta" class="form-control">
            </textarea><br>
            <!-- mostrando o id da perguntada  -->
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-secondary">Responder</button>
        </form>
        <h3>Respostas</h3>
        <% respostas.forEach(resposta => { %>
            <br>
           <div class="card">
               <div class="card-body">
                <!-- exibição de variavel lembrar de colocar o = -->
                   <p><%= resposta.corpo %></p>
               </div>
           </div>
        <% }) %>
    </div>
</body>